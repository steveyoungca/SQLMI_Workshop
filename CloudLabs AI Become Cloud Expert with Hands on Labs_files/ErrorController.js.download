angular.module('cloudsandbox.studentportal').controller('ErrorController', ['$rootScope', '$scope', '$http', '$state', '$stateParams', 'notifier', function ($rootScope, $scope, $http, $state, $stateParams, notifier) {

    $scope.ErrorMessage = $state.params.ErrorMessage == null ? "Something went wrong!" : $state.params.ErrorMessage;
    $scope.ReturnToState = $state.params.ReturnToState == null ? "main.home" : $state.params.ReturnToState;
    $scope.ErrorStatus = $state.params.ErrorStatus == null ? "500" : $state.params.ErrorStatus + "";

    $scope.ActionToFix = "We're sorry, the page you are looking for does not exist!";
    if ($scope.ErrorStatus !== "500") {
        $scope.ActionToFix = "Please contact administrator for support";
    }
}]);