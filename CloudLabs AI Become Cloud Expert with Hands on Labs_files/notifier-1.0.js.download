(function () {
    'use strict';
    angular
        .module('cloudsandbox.studentportal')
        .factory('notifier', notifier);

    notifier.$inject = ['toaster'];
    function notifier(toaster) {

        return {
            notify: function (msg) {
                toaster.success(msg);
            },
            notifyError: function (msg) {
                toaster.error(msg);
            },
            notifyInfo: function (msg) {
                toaster.info(msg);
            },
            notifyWarning: function (msg) {
                toaster.warning(msg);
            }
        }
    }
}
)();